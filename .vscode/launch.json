  "version": "0.2.0",
  "configurations": [
    {
      "name": "sample.txt",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "args": ["${fileDirname}${pathSeparator}sample.txt"]
    },
    {
      "name": "input.txt",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "args": ["${fileDirname}${pathSeparator}input.txt"]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
